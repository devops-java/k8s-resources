{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "name": "spring-web-rc"
  },
  "spec": {
    "replicas": 3,
    "selector": {
      "env": "design"
    },
    "template": {
      "metadata": {
        "name": "spring-boot-web",
        "labels":{
        "env":"design"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "rkp201/k8s-spring-app:1.3",
            "name": "spring-boot-web",
            "ports": [
              {
                "containerPort": 8080,
                "protocol": "TCP"
              }
            ]
          }
        ]
      }
    }
  }
}
